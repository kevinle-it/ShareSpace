<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lmtri.sharespace.activity.posthouse.PostHouseActivity">

    <FrameLayout
        android:id="@+id/activity_post_house_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/activity_post_house_post_bar"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Housing info section-->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_add_photo_container_left_right_margin"
                                android:layout_marginStart="@dimen/activity_post_house_add_photo_container_left_right_margin"
                                android:layout_marginTop="@dimen/activity_post_house_add_photo_container_top_bottom_margin"
                                android:layout_marginRight="@dimen/activity_post_house_add_photo_container_left_right_margin"
                                android:layout_marginEnd="@dimen/activity_post_house_add_photo_container_left_right_margin"
                                android:layout_marginBottom="@dimen/activity_post_house_add_photo_container_top_bottom_margin">

                                <GridLayout
                                    android:id="@+id/activity_post_house_add_photo_grid_container"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:columnCount="4" />

                            </FrameLayout>

                            <include
                                layout="@layout/activity_post_house_general_info_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/activity_post_house_house_title_field"
                                android:id="@+id/activity_post_house_house_title_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_num_people_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_num_room_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_num_bed_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_num_bath_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <include
                                layout="@layout/activity_post_house_feature_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/activity_post_house_house_type_field"
                                android:id="@+id/activity_post_house_house_type_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_area_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <include
                                layout="@layout/activity_post_house_location_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/activity_post_house_address_field"
                                android:id="@+id/activity_post_house_address_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_house_direction_field"
                                android:id="@+id/activity_post_house_house_direction_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <include
                                layout="@layout/activity_post_house_price_and_contact_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/activity_post_house_price_field"
                                android:id="@+id/activity_post_house_price_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_contact_field"
                                android:id="@+id/activity_post_house_contact_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <include
                                layout="@layout/activity_post_house_description_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <include
                                layout="@layout/activity_post_house_description_field"
                                android:id="@+id/activity_post_house_description_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_time_restriction_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_allow_pet_field"
                                android:id="@+id/activity_post_house_allow_pet_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_has_wifi_field"
                                android:id="@+id/activity_post_house_has_wifi_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_has_ac_field"
                                android:id="@+id/activity_post_house_has_ac_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                                android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                                android:background="@color/silver_gray" />

                            <include
                                layout="@layout/activity_post_house_has_parking_field"
                                android:id="@+id/activity_post_house_has_parking_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                                android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin" />

                        </LinearLayout>

                        <View
                            android:id="@+id/activity_post_share_house_disable_edit_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/black"
                            android:alpha="0.2" />

                    </FrameLayout>

                    <!--Share Housing info section-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/clouds">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                            android:background="@color/silver_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_post_house_section_text_left_margin"
                            android:layout_marginStart="@dimen/activity_post_house_section_text_left_margin"
                            android:layout_marginTop="@dimen/activity_post_house_section_text_top_bottom_margin"
                            android:layout_marginBottom="@dimen/activity_post_house_section_text_top_bottom_margin"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_post_share_house_sharer_info_section"
                            android:textSize="@dimen/activity_post_house_section_text_size" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                            android:background="@color/silver_gray" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_post_share_house_price_field"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/ripple_effect_default_white"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_post_house_inner_text_field_margin"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_post_share_house_price_field"
                            android:textSize="@dimen/activity_post_house_inner_text_field_text_size" />

                        <View
                            android:layout_width="@dimen/activity_post_house_space_between_text_field_and_type"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/activity_post_share_house_price_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:text=""
                            android:textSize="@dimen/activity_post_house_inner_type_text_size"
                            android:textColor="@color/textColorDisabledHint"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:freezesText="true" />

                        <ImageView
                            android:layout_width="@dimen/activity_post_house_right_arrow_field_width_height"
                            android:layout_height="@dimen/activity_post_house_right_arrow_field_width_height"
                            android:layout_margin="@dimen/activity_post_house_right_arrow_field_margin"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                        android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:background="@color/silver_gray" />

                    <LinearLayout
                        android:id="@+id/activity_post_share_house_description_field"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/ripple_effect_default_white"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_post_house_inner_text_field_margin"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_post_house_description_field"
                            android:textSize="@dimen/activity_post_house_inner_text_field_text_size" />

                        <View
                            android:layout_width="@dimen/activity_post_house_space_between_text_field_and_type"
                            android:layout_height="0dp" />

                        <TextView
                            android:id="@+id/activity_post_share_house_description_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:text=""
                            android:textSize="@dimen/activity_post_house_inner_type_text_size"
                            android:textColor="@color/textColorDisabledHint"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:freezesText="true" />

                        <ImageView
                            android:layout_width="@dimen/activity_post_house_right_arrow_field_width_height"
                            android:layout_height="@dimen/activity_post_house_right_arrow_field_width_height"
                            android:layout_margin="@dimen/activity_post_house_right_arrow_field_margin"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_right_arrow" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                        android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:background="@color/silver_gray" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_post_house_inner_text_field_margin"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_post_share_house_required_num_people"
                            android:textSize="@dimen/activity_post_house_inner_text_field_text_size" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <com.lmtri.sharespace.customview.CustomEditText
                            android:id="@+id/activity_post_share_house_required_num_people_edit_text"
                            android:layout_width="@dimen/activity_post_house_edit_text_width"
                            android:layout_height="@dimen/activity_post_house_edit_text_height"
                            android:layout_margin="@dimen/activity_post_house_edit_text_margin"
                            android:paddingRight="@dimen/activity_post_house_edit_text_right_padding"
                            android:paddingEnd="@dimen/activity_post_house_edit_text_right_padding"
                            android:paddingTop="@dimen/activity_post_house_edit_text_top_padding"
                            android:gravity="end"
                            android:background="@drawable/edittext_box"
                            android:inputType="number"
                            android:imeOptions="actionDone" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                        android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:background="@color/silver_gray" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_post_house_inner_text_field_margin"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_post_share_house_required_gender"
                            android:textSize="@dimen/activity_post_house_inner_text_field_text_size" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <Spinner
                            android:id="@+id/activity_post_share_house_required_gender_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_post_share_house_required_gender_spinner_left_right_margin"
                            android:layout_marginEnd="@dimen/activity_post_share_house_required_gender_spinner_left_right_margin"
                            android:spinnerMode="dropdown"
                            android:entries="@array/hint_signup_gender_array"
                            android:theme="@style/SpinnerItem.PostHouse"
                            style="@style/Widget.AppCompat.Spinner.Underlined"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_post_house_horizontal_line_height"
                        android:layout_marginLeft="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_horizontal_line_left_margin"
                        android:background="@color/silver_gray" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_post_house_field_container_left_margin"
                        android:layout_marginStart="@dimen/activity_post_house_field_container_left_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/activity_post_house_inner_text_field_margin"
                            android:layout_gravity="center_vertical"
                            android:text="@string/activity_post_share_house_required_work_type"
                            android:textSize="@dimen/activity_post_house_inner_text_field_text_size" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />

                        <Spinner
                            android:id="@+id/activity_post_share_house_required_work_type_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_post_share_house_required_work_type_spinner_left_right_margin"
                            android:layout_marginEnd="@dimen/activity_post_share_house_required_work_type_spinner_left_right_margin"
                            android:spinnerMode="dropdown"
                            android:entries="@array/share_housing_work_type_array"
                            android:theme="@style/SpinnerItem.PostHouse"
                            style="@style/Widget.AppCompat.Spinner.Underlined"/>

