<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/activity_post_house_post_bar_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_post_house_post_bar_text_padding"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/activity_post_house_cancel"
        android:textSize="@dimen/activity_post_house_post_bar_text_size"
        android:textColor="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/ripple_effect_primary_color"
        android:clickable="true" />

    <TextView
        android:id="@+id/activity_post_house_post_bar_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_post_house_post_bar_text_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/activity_post_house_post"
        android:textSize="@dimen/activity_post_house_post_bar_text_size"
        android:textColor="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/ripple_effect_primary_color"
        android:clickable="true" />

</RelativeLayout>