<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/activity_housing_detail_house_host_profile_image"
        android:layout_width="@dimen/activity_housing_detail_house_host_width_height"
        android:layout_height="@dimen/activity_housing_detail_house_host_width_height"
        android:layout_marginRight="@dimen/activity_housing_detail_house_host_right_margin" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_housing_detail_house_type_left_margin">

        <TextView
            android:id="@+id/activity_housing_detail_house_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entire place"
            android:textStyle="bold"
            android:textSize="@dimen/activity_housing_detail_house_type_text_size"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/activity_housing_detail_house_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hosted by Rani"
            android:textSize="@dimen/activity_housing_detail_house_host_text_size"
            android:textColor="@color/textColorSecondary" />

    </LinearLayout>

</LinearLayout>