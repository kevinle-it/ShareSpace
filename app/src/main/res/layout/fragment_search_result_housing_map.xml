<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lmtri.sharespace.fragment.home.search.SearchResultHousingMapFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_search_result_housing_map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_search_result_housing_map_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/fragment_search_result_housing_toolbar_title"
                android:textColor="@color/white"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

            <ImageView
                android:id="@+id/fragment_search_result_housing_list_view_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/fragment_search_result_housing_list_view_map_view_icon_right_margin"
                android:layout_marginEnd="@dimen/fragment_search_result_housing_list_view_map_view_icon_right_margin"
                android:clickable="true"
                android:src="@drawable/ic_list_view" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <com.google.android.gms.maps.MapView
        android:id="@+id/fragment_search_result_housing_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
