<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/share_housing_recycler_view_adapter_history_share_housing_section"
            android:textSize="13dp"
            android:textColor="@color/textColorSecondary"
            android:ellipsize="end"
            android:maxLines="1" />

        <LinearLayout
            android:id="@+id/fragment_share_housing_list_history_share_housing_section_item_show_more"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:text="@string/share_housing_recycler_view_adapter_history_share_housing_section_show_more"
                android:textSize="13sp"
                android:textColor="@color/light_blue"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/non_square_right_triangle_arrow_image"
                android:tint="@color/light_blue" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silver_gray" />

</LinearLayout>