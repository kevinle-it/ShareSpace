<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post_house_add_profile_photo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dash_line_box">

    <ImageView
        android:id="@+id/activity_post_house_add_profile_photo_plus_sign"
        android:layout_width="@dimen/activity_post_house_add_profile_photo_plus_sign_width_height"
        android:layout_height="@dimen/activity_post_house_add_profile_photo_plus_sign_width_height"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_plus_sign_24dp"
        android:tint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_post_house_add_profile_photo_cover_image_text_margin"
        android:text="@string/activity_post_house_cover_image"
        android:textSize="@dimen/activity_post_house_add_profile_photo_cover_image_text_size"
        android:textColor="@color/textColorSecondary" />

</RelativeLayout>