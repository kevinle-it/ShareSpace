<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@drawable/ripple_effect_default_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/activity_post_house_detailed_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left|start|center_vertical"
                android:layout_marginLeft="@dimen/activity_post_house_detailed_item_name_left_margin"
                android:layout_marginStart="@dimen/activity_post_house_detailed_item_name_left_margin"
                android:layout_marginTop="@dimen/activity_post_house_detailed_item_name_top_bottom_margin"
                android:layout_marginBottom="@dimen/activity_post_house_detailed_item_name_top_bottom_margin"
                android:text="Detailed Item"
                android:textSize="@dimen/activity_post_house_detailed_item_name_text_size" />

            <com.lmtri.sharespace.customview.CustomEditText
                android:id="@+id/activity_post_house_detailed_item_contact_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="right|end|center_vertical"
                android:layout_marginRight="@dimen/activity_post_house_detailed_item_contact_input_right_margin"
                android:layout_marginEnd="@dimen/activity_post_house_detailed_item_contact_input_right_margin"
                android:layout_toRightOf="@+id/activity_post_house_detailed_item_name"
                android:visibility="gone" />

        </LinearLayout>

        <ImageView
            android:id="@+id/activity_post_house_detailed_item_check_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_post_house_detailed_item_check_mark_right_margin"
            android:layout_marginEnd="@dimen/activity_post_house_detailed_item_check_mark_right_margin"
            android:src="@drawable/ic_check_mark"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_post_house_detailed_item_horizontal_line_height"
        android:background="@color/silver_gray" />

</LinearLayout>