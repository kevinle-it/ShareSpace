<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="House Number"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Street"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ward"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="District"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/activity_housing_detail_address_house_number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="141/21"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/activity_housing_detail_address_street_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bui Vien"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/activity_housing_detail_address_ward_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pham Ngu Lao"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/activity_housing_detail_district_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/activity_housing_detail_city_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ho Chi Minh"
            android:textSize="@dimen/activity_housing_detail_address_text_size"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</LinearLayout>