<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/fragment_housing_item_card_view_corner_radius"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/fragment_housing_item_card_view_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/ripple_effect_default_white_rounded_corners_housing_item">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.lmtri.sharespace.customview.SquareImageView
                android:id="@+id/fragment_housing_item_house_profile_image_placeholder"
                android:layout_width="@dimen/fragment_housing_item_profile_image_view_width_height"
                android:layout_height="@dimen/fragment_housing_item_profile_image_view_width_height"
                android:scaleType="fitXY" />

            <com.lmtri.sharespace.customview.SquareImageView
                android:id="@+id/fragment_housing_item_house_profile_image"
                android:layout_width="@dimen/fragment_housing_item_profile_image_view_width_height"
                android:layout_height="@dimen/fragment_housing_item_profile_image_view_width_height"
                android:scaleType="fitXY" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/fragment_housing_item_all_info_top_bottom_padding"
            android:paddingBottom="@dimen/fragment_housing_item_all_info_top_bottom_padding"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/fragment_housing_item_all_info_left_margin">

            <TextView
                android:id="@+id/fragment_housing_item_house_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/fragment_housing_item_info_bottom_margin"
                android:text="SETTE CONI - TRULLO EDERA"
                android:textStyle="bold"
                android:textSize="@dimen/fragment_housing_item_house_title_text_size"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/fragment_housing_item_house_type"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/fragment_housing_item_info_bottom_margin"
                android:text="Entire home"
                android:textSize="@dimen/fragment_housing_item_house_type_and_location_title_text_size"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/fragment_housing_item_house_location"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/fragment_housing_item_info_bottom_margin"
                android:text="Ostuni"
                android:textSize="@dimen/fragment_housing_item_house_type_and_location_title_text_size"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="1" />

