<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/activity_housing_detail_allow_pet"
        android:layout_toStartOf="@+id/activity_housing_detail_allow_pet"
        android:layout_centerVertical="true"
        android:text="@string/activity_housing_detail_allow_pet"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/activity_housing_detail_allow_pet"
        android:layout_width="@dimen/activity_housing_detail_other_info_cross_check_mark_image_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cross" />

</RelativeLayout>