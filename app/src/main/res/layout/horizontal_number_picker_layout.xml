<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="130dp"
    android:layout_height="30dp"
    android:layout_margin="@dimen/activity_post_house_edit_text_margin"
    android:background="@drawable/horizontal_number_picker_rounded_corners">

    <Button
        android:id="@+id/horizontal_number_picker_decrement_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="@null"
        android:text="â€”"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/horizontal_number_picker_display"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/horizontal_number_picker_square_corners"
        android:text="--/--"
        android:focusable="false" />

    <Button
        android:id="@+id/horizontal_number_picker_increment_button"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="@null"
        android:text="+"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

</LinearLayout>