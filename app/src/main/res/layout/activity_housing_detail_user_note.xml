<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_housing_detail_note_section_bottom_margin"
        android:text="@string/activity_housing_detail_note_section"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/activity_housing_detail_user_note_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/activity_housing_detail_user_note_text_size"
        android:textColor="@color/textColorSecondary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_housing_detail_horizontal_line_height"
        android:layout_marginTop="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
        android:layout_marginBottom="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
        android:background="@color/silver_gray" />

</LinearLayout>