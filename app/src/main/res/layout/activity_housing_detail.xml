<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.lmtri.sharespace.activity.HousingDetailActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_housing_detail_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_housing_detail_booking_divider">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_housing_detail_appbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap">

                <ImageView
                    android:id="@+id/activity_housing_detail_house_profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_housing_detail_house_profile_image_height"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.0"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/activity_housing_detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:minHeight="?attr/actionBarSize"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/activity_housing_detail_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/activity_housing_detail_house_title_price_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_housing_detail_house_title_price_rating_layout_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_house_title_price_rating_layout_left_right_margin"
                    android:layout_marginTop="@dimen/activity_housing_detail_house_title_price_rating_top_bottom_margin"
                    android:layout_marginBottom="@dimen/activity_housing_detail_house_title_price_rating_top_bottom_margin" />

                <include
                    layout="@layout/activity_housing_detail_availability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_housing_detail_availability_layout_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_availability_layout_left_right_margin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_housing_detail_horizontal_line_height"
                    android:layout_marginLeft="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginTop="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:layout_marginBottom="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:background="@color/silver_gray"/>

                <include
                    layout="@layout/activity_housing_detail_about_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_housing_detail_about_house_layout_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_about_house_layout_left_right_margin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_housing_detail_horizontal_line_height"
                    android:layout_marginLeft="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginTop="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:layout_marginBottom="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:background="@color/silver_gray"/>

                <include
                    layout="@layout/activity_housing_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_housing_detail_address_layout_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_address_layout_left_right_margin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_housing_detail_horizontal_line_height"
                    android:layout_marginLeft="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginTop="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:layout_marginBottom="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:background="@color/silver_gray"/>

                <include
                    layout="@layout/activity_housing_detail_house_type_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_housing_detail_house_host_type_layout_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_house_host_type_layout_left_right_margin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_housing_detail_horizontal_line_height"
                    android:layout_marginLeft="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginRight="@dimen/activity_housing_detail_horizontal_line_left_right_margin"
                    android:layout_marginTop="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:layout_marginBottom="@dimen/activity_housing_detail_horizontal_line_top_bottom_margin"
                    android:background="@color/silver_gray"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <View
        android:id="@+id/activity_housing_detail_booking_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_housing_detail_horizontal_line_height"
        android:layout_above="@+id/activity_housing_detail_booking_layout"
        android:background="@color/silver_gray" />

    <include
        layout="@layout/activity_housing_detail_booking_layout"
        android:id="@+id/activity_housing_detail_booking_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
